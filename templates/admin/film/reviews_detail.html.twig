
{% for review in entity.instance.reviews %}
    <div class="card">
        <div class="card-header">
            {{ review.description }}
        </div>
        <div class="card-body">
            <blockquote class="blockquote mb-0">
                <p>{{review.content}}</p>
                <footer class="blockquote-footer"> {{ review.user.email }} <cite title="Source Title">{{review.rating}}</cite></footer>
            </blockquote>
        </div>
    </div>
{% endfor %}