{% extends '@!EasyAdmin/layout.html.twig' %}


{% block content_title %}
    <h1 class="title">Portada</h1>
{% endblock %}

{% block main %}

    <div class="row">

        {% for film in films %}
            <div class="col-sm-3 mb-2" >
                <div class="card" style="width: 18rem;">
                    <a href="{{ ea_url()
                        .setController('App\\Controller\\Admin\\FilmCrudController')
                        .setAction('detail')
                        .setEntityId( film.id)}}">
                        <img class="card-img-top" src="{{ film.poster }}" alt="">
                    </a>
                    <div class="card-body">
                        <h4 class="card-title">{{ film.title }}</h4>
                    </div>
                </div>
            </div>
        {% endfor %}

    </div>
{% endblock %}